        android:duration="150"/>

    <translate android:fromXDelta="-10%p" android:toXDelta="10%p"
        android:duration="150" android:startOffset="100"/>

    <translate android:fromXDelta="10%p" android:toXDelta="-10%p"
        android:duration="150" android:startOffset="200"/>

    <translate android:fromXDelta="-10%p" android:toXDelta="10%p"
        android:duration="150" android:startOffset="300"/>

    <translate android:fromXDelta="10%p" android:toXDelta="0%p"
        android:duration="150" android:startOffset="400"/>
